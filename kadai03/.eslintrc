{
  "parser": "@typescript-eslint/parser",
  "extends": [
    "plugin:@typescript-eslint/recommended",
    "plugin:prettier/recommended",
    "prettier/@typescript-eslint"
  ],
  "rules": {
    "prettier/prettier": [
      {
        "printWidth": 120,
        "tabWidth": 2,
        "singleQuote": true,
        "semi": false,
        "parser": "typescript"
      }
    ]
  }
}